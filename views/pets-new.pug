extends layout

block content
    
  .row.justify-content-center
    .col-sm-6
      legend New Pet
      form(action="#", id="new-pet", method="post")
        .form-group
            label Name
            input.form-control(name="name" required)
        .form-group
            label Species
            input.form-control(name="species" required)
        .form-group
            label Rectangular Image URL
            input.form-control(name="picUrl" required) 
        .form-group
            label Square Image URL
            input.form-control(name="picUrlSq" required)   
        .form-group
            label Favorite Food
            input.form-control(name="favoriteFood" required) 
        .form-group
            label Description
            textarea.form-control(name="description" required)   
        button(type="submit").btn.btn-primary Save
